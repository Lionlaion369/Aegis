    fornecerFeedback();

    // Repetição automática a cada 60 segundos
    setTimeout(cicloDeProtecao, 60000);
}

// Evento de botão (opcional)
const botao = document.querySelector("button");
if (botao) {
    botao.addEventListener("click", function () {
        ativarProtecao();
        aprimorarIA();
        integrarComOutraIA();
    });
}

// Iniciar automaticamente
cicloDeProtecao();
